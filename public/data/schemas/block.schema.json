{
  "title": "Block",
  "description": "Block",
  "type": "object",
  "_meta": {
    "type": null,
    "list": {
      "icon": "$.icon",
      "title": "$.title",
      "subtitle": "$.name"
    }
  },
  "properties": {
    "id": {
      "title": "Id",
      "type": "string",
      "readOnly": true,
      "_meta": {
        "type": null
      }
    },
    "name": {
      "title": "Name",
      "type": "string",
      "_meta": {
        "type": null,
        "i18n": {
          "Name": [ "Nom", "Nombre" ]
        }
      }
    },
    "type": {
      "title": "Type",
      "type": "string",
      "enum": [
        "Source",
        "Processing",
        "Widget"
      ],
      "_meta": {
        "type": null,
        "i18n": {
          "Type": [ "Type", "Tipo" ],
          "Source": [ "Source", "Fuente" ],
          "Processing": [ "Traitement", "Tratamiento" ],
          "Widget": [ "Visualisation", "Visualización" ]
        }
      }
    },
    "service": {
      "title": "Associated service",
      "type": "string",
      "_meta": {
        "type": null,
        "selection": {
          "provider": "ig-service-picker",
          "event": "selection:service",
          "field": "name"
        },
        "i18n": {
          "Associated service": [ "Service associé", "Servicio asociado" ]
        },
        "showIf": {
          "jsonpath": "$.external",
          "condition": "neq",
          "value": true
        }
      }
    },
    "instance": {
      "title": "Instance",
      "type": "string",
      "_meta": {
        "type": null,
        "i18n": {
          "Instance": [ "Instance", "Instancia" ]
        },
        "selection": {
          "list": "getServiceInstances",
          "params": [ "$.service" ]
        }
      }
    },
    "description": {
      "title": "Description",
      "type": "string",
      "_meta": {
        "type": null,
        "i18n": {
          "Description": [ "Description", "Descripción" ]
        }
      }
    },
    "icon": {
      "title": "Icon",
      "type": "string",
      "_meta": {
        "type": "image",
        "imageType": "image/*",
        "maxSize": 50000,
        "showThumbnail": true,
        "i18n": {
          "Icon": [ "Icône", "Icono" ]
        }
      }
    },
    "inputs": {
      "title": "Inputs",
      "type": "array",
      "_meta": {
        "type": null,
        "i18n": {
          "Inputs": [ "Entrées", "Entradas" ]
        },
        "showIf": [
          {
            "jsonpath": "$.service",
            "condition": "neq",
            "value": ""
          },
          {
            "operator": "&&"
          },
          {
            "jsonpath": "$.type",
            "condition": "neq",
            "value": "Source"
          }
        ]
      },
      "items": {
        "title": "Input",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "default": "anInput",
            "type": "string",
            "_meta": {
              "type": null
            }
          },
          "type": {
            "title": "Type",
            "type": "string",
            "default": "Event",
            "enum": [
              "Event", "Remote call", "Stream"
            ],
            "_meta": {
              "type": null,
              "i18n": {
                "Event": [ "Événement", "Evenimiento" ],
                "Remote call": [ "Appel distant", "Llamada remota" ],
                "Stream": [ "Flux", "Flujo" ]
              }
            }
          },
          "method": {
            "title": "Method",
            "type": "string",
            "default": "",
            "_meta": {
              "type": null,
              "selection": {
                "list": "getServiceMethods",
                "params": [ "$.service", "$.instance"  ],
                "text": {
                  "match": "_$.instance",
                  "value": ""
                }
              },
              "i18n": {
                "Method": [ "Méthode", "Método" ]
              }
            }
          }
        },
        "_meta": {
          "type": null,
          "i18n": {
            "Input": [ "Entrée", "Entrada" ]
          }
        }
      }
    },
    "outputs": {
      "title": "Outputs",
      "type": "array",
      "_meta": {
        "type": null,
        "i18n": {
          "Outputs": [ "Sorties", "Salidas" ]
        },
        "showIf": [
          {
            "jsonpath": "$.service",
            "condition": "neq",
            "value": ""
          },
          {
            "operator": "&&"
          },
          {
            "jsonpath": "$.type",
            "condition": "neq",
            "value": "Widget"
          }
        ]
      },
      "items": {
        "title": "Output",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string",
            "default": "anOutput",
            "_meta": {
              "type": null
            }
          },
          "type": {
            "title": "Type",
            "type": "string",
            "default": "Event",
            "enum": [
              "Event", "Remote call", "Stream"
            ],
            "_meta": {
              "type": null,
              "i18n": {
                "Event": [ "Événement", "Evenimiento" ],
                "Remote call": [ "Appel distant", "Llamada remota" ],
                "Stream": [ "Flux", "Flujo" ]
              }
            }
          },
          "method": {
            "title": "Method",
            "type": "string",
            "default": "",
            "_meta": {
              "type": null,
              "selection": {
                "list": "getServiceMethods",
                "params": [ "$.service", "$.instance" ],
                "text": {
                  "match": "_$.instance",
                  "value": ""
                }
              },
              "i18n": {
                "Method": [ "Méthode", "Método" ]
              }
            }
          }
        },
        "_meta": {
          "type": null,
          "i18n": {
            "Output": [ "Sortie", "Salida" ]
          }
        }
      }
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
